### """ ###
#
# Systematiser navngivelserne og ops√¶tningen/layoutet for kivy.filerne


<Screen_D>:

    on_enter:
        root.screen_D_in_last_entered_screen_json_file()

    on_pre_leave:
        root.screen_A_in_last_entered_screen_json_file()



#---------TOP OF SCREEN (BACK ARROW, BUDGET NAME, BURGER MENU)----------

    BoxLayout:

        orientation: "vertical"

        size_hint: (1, .1)
        pos_hint: {"center_x": .5, "top": 1}


        RelativeLayout:

            ImageButton:

                source: "images_icons_and_videos/back_arrow.png"
                size_hint: (.05, .85)
                pos_hint: {"x": .08, "top": 1}

                on_release:
                    app.root.current = "screen_C"
                    root.manager.transition.direction = "right"


            Label:
                id: budget_name

                text: ""

                color: (0, 0, 0, 1)
                size_hint: (.60, .85)
                pos_hint: {"x": .2, "top": 1}



            ImageButton:
                source: "images_icons_and_videos/burger_menu_ScreenShot.png"

                size_hint: (.05, .85)
                pos_hint: {"x": .87, "top": 1}

                on_release:
                    root.burger_menu_open()




#-------CONTENT OF SCREEN_D--------------


    RelativeLayout:
        id: relative_layout_for_GIVE_BUDGET_NAME

        Label:
            text: "Give your budget a name"

            color: (0, 0, 0, 1)
            font_size: 18

            text_size: self.size
            halign: "center"

            size_hint: (.8, .1)
            pos_hint: {"center_x": .5, "top": .8}


        TextInput:
            id: text_input_GIVE_BUDGET_NAME

            multiline: False

            size_hint: (.6, .08)
            pos_hint: {"center_x": .5, "top": .68}

            on_text:
                root.saving_current_budget_name()





    #--------TEXT INPUT FOR GIVING BUDGET A NAME---------






    #----------NEXT BUTTON---------------

        Button:
            text: "Next"

            font_size: 15
            size_hint: (.3, .1)
            pos_hint: {"center_x": .5, "top": .4}

            on_release:
                app.root.current = "screen_E"
                root.putting_budget_name_in_top_of_screens()
