<text_input_DISPOSABLE_AMOUNT>:

    id: text_input_DISPOSABLE_AMOUNT

    text: "37"

    font_size: 14

    multiline: False
    input_filter: "float"

    size_hint: (.7, .08)
    pos_hint: {"center_x": .5, "top": .7}

    on_text:
        root.on_text_if_nothing_then_0_in_text_input()
        root.saving_DISPOSABLE_AMOUNT_in_json()



<Screen_E>:


    on_enter:
        root.screen_E_in_last_entered_screen_json_file()

    on_pre_leave:
        root.screen_A_in_last_entered_screen_json_file()


#---------TOP OF SCREEN (BACK ARROW, BUDGET NAME, BURGER MENU)----------



    BoxLayout:

        orientation: "vertical"

        size_hint: (1, .1)
        pos_hint: {"center_x": .5, "top": 1}


        RelativeLayout:

            ImageButton:

                source: "images_icons_and_videos/back_arrow.png"
                size_hint: (.05, .85)
                pos_hint: {"x": .08, "top": 1}

                on_release:
                    app.root.current = "screen_D"
                    root.manager.transition.direction = "right"


            Label:
                id: budget_name_in_top

                text: ""

                color: (0, 0, 0, 1)
                size_hint: (.60, .85)
                pos_hint: {"x": .2, "top": 1}



            ImageButton:
                source: "images_icons_and_videos/burger_menu_ScreenShot.png"

                size_hint: (.05, .85)
                pos_hint: {"x": .87, "top": 1}

                on_release:
                    root.burger_menu_open()







#------------CONTENT OF SCREEN_E---------------



    RelativeLayout:
        id: relative_layout_for_DISPOSABLE_AMOUNT


        Label:
            text: "Enter your disposable amount"

            color: (0, 0, 0, 1)
            font_size: 18
            text_size: self.size
            halign: 'center'

            size_hint: (.8, .15)

            pos_hint: {"center_x": .5, "top": .9}







        Button:
            text: "Calculate your disposable amount"

            color: (0, 0, 0, 1)
            size_hint: (.8, .05)

            pos_hint: {"center_x": .5, "top": .55}

            on_release:
                root.open_calculator_for_disposable_amount()





        Button:
            text: "Next"
            font_size: 14
            size_hint: (.5, .05)

            pos_hint: {"center_x": .5, "top": .25}

            on_release:
                app.root.current = "screen_F"
                root.manager.transition.direction = "left"
                root.function_showing_START_DISPOSABLE_amount_IN_NEXT_SCREEN()
                root.function_showing_CORRECT_REMAINING_amount_IN_NEXT_SCREEN()